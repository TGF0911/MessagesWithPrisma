datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int       @default(autoincrement()) @id
  name    String
  email   String    @unique
  Message Message[]
}

model Message {
  id      Int    @default(autoincrement()) @id
  title   String
  content String
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
}